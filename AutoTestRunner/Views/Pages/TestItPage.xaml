<Page
    x:Class="AutoTestRunner.Views.Pages.TestItPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:convert="clr-namespace:AutoTestRunner.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AutoTestRunner.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:AutoTestRunner.ViewModels"
    Title="TestIt"
    d:DataContext="{d:DesignInstance Type=viewmodels:TestItViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <Page.Resources>
        <convert:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </Page.Resources>

    <Grid Background="#b5d7f3" ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="24"
            Text="TestIT runner" />

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="10,20"
            Background="White"
            BorderBrush="Black"
            BorderThickness="1">
            <Grid IsEnabled="{Binding TmsPropertiesIsEnabled, UpdateSourceTrigger=PropertyChanged}">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--<TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="DemiBold"
                    Text="Tms Runner" />
                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="500"
                    Height="30"
                    Margin="10,0,10,10"
                    VerticalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="1.5"
                    Text="{Binding TmsRunnerPath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                <TextBlock
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="DemiBold"
                    Text="VsTest Runner" />
                <TextBox
                    Grid.Row="4"
                    Grid.Column="1"
                    Width="500"
                    Height="30"
                    Margin="10,0,10,10"
                    VerticalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="1.5"
                    IsReadOnly="True"
                    Text="{Binding TestRunnerPath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                <TextBlock
                    Grid.Row="5"
                    Grid.Column="1"
                    Margin="10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="DemiBold"
                    Text="Test Assembly" />
                <TextBox
                    Grid.Row="6"
                    Grid.Column="1"
                    Width="500"
                    Height="30"
                    Margin="10,0,10,10"
                    VerticalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="1.5"
                    Text="{Binding TestAssemblyPath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />-->

                <TextBlock
                    Grid.Row="7"
                    Grid.Column="1"
                    Margin="10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="DemiBold"
                    Text="Adapter Mode" />
                <ComboBox
                    Grid.Row="8"
                    Grid.Column="1"
                    Width="500"
                    Height="30"
                    Margin="10,0,10,10"
                    VerticalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="1.5"
                    FontSize="14"
                    ItemsSource="{Binding TmsAdapterModeList}"
                    SelectedItem="{Binding TmsAdapterMode}" />

                <TextBlock
                    Grid.Row="9"
                    Grid.Column="1"
                    Margin="10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="DemiBold"
                    Text="TestRunner Id"
                    Visibility="{Binding TmsTestRunId, Converter={StaticResource NullToVisibilityConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox
                    Grid.Row="10"
                    Grid.Column="1"
                    Width="500"
                    Height="30"
                    Margin="10,0,10,10"
                    Padding="5,0"
                    VerticalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="1.5"
                    FontSize="14"
                    Text="{Binding TmsTestRunId, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Visibility="{Binding TmsTestRunId, Converter={StaticResource NullToVisibilityConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock
                    Grid.Row="11"
                    Grid.Column="1"
                    Margin="10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="DemiBold"
                    Text="Labels Of Tests"
                    Visibility="{Binding TmsLabelsOfTestsToRun, Converter={StaticResource NullToVisibilityConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox
                    Grid.Row="12"
                    Grid.Column="1"
                    Width="500"
                    Height="30"
                    Margin="10,0,10,10"
                    Padding="5,0"
                    VerticalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="1.5"
                    FontSize="14"
                    Text="{Binding TmsLabelsOfTestsToRun, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Visibility="{Binding TmsLabelsOfTestsToRun, Converter={StaticResource NullToVisibilityConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock
                    Grid.Row="13"
                    Grid.Column="1"
                    Margin="10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="DemiBold"
                    Text="TestRunner Name"
                    Visibility="{Binding TmsTestRunName, Converter={StaticResource NullToVisibilityConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox
                    Grid.Row="14"
                    Grid.Column="1"
                    Width="500"
                    Height="30"
                    Margin="10,0,10,10"
                    Padding="5,0"
                    VerticalContentAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="1.5"
                    FontSize="14"
                    Text="{Binding TmsTestRunName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    Visibility="{Binding TmsTestRunName, Converter={StaticResource NullToVisibilityConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </Border>

        <Grid
            Grid.Row="2"
            Grid.Column="1"
            VerticalAlignment="Center">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Width="100"
                Height="50"
                Margin="0,0,15,10"
                HorizontalAlignment="Right"
                BorderBrush="Black"
                BorderThickness="1.5"
                Command="{Binding CreateScriptForRunCommand}"
                Content="Create run"
                FontWeight="DemiBold" />

            <Button
                Grid.Column="1"
                Width="100"
                Height="50"
                Margin="15,0,0,10"
                HorizontalAlignment="Left"
                BorderBrush="Black"
                BorderThickness="1.5"
                Command="{Binding EditScriptForRunCommand}"
                Content="Edit"
                FontWeight="DemiBold" />

        </Grid>
        <Border
            Grid.Row="3"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="10,20"
            BorderBrush="Black"
            BorderThickness="1">
            <TextBox
                Height="600"
                MaxWidth="520"
                Padding="5"
                VerticalAlignment="Top"
                Background="White"
                HorizontalScrollBarVisibility="Auto"
                IsReadOnly="True"
                Text="{Binding LogOutPut, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                VerticalScrollBarVisibility="Auto" />
        </Border>

        <Grid
            Grid.Row="5"
            Grid.Column="1"
            VerticalAlignment="Center">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Width="100"
                Height="50"
                Margin="0,0,15,30"
                HorizontalAlignment="Right"
                BorderBrush="Black"
                BorderThickness="1.5"
                Command="{Binding StartTestsCommand}"
                Content="Start TestIt"
                FontWeight="DemiBold" />

            <Button
                Grid.Column="1"
                Width="100"
                Height="50"
                Margin="15,0,0,30"
                HorizontalAlignment="Left"
                BorderBrush="Black"
                BorderThickness="1.5"
                Command="{Binding StopTestRunnerCommand}"
                Content="Stop"
                FontWeight="DemiBold" />

        </Grid>



    </Grid>
</Page>
