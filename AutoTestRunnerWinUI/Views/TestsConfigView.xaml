<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AutoTestRunnerWinUI.Views.TestsConfigView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:convert="using:AutoTestRunnerWinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AutoTestRunnerWinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:AutoTestRunnerWinUI.Models"
    mc:Ignorable="d">

    <Page.Resources>
        <convert:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </Page.Resources>

    <Grid>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0,10,0,10">



                <Grid x:Name="TestsConfigGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="10"
                        HorizontalAlignment="Center"
                        FontFamily="Bold"
                        FontSize="13"
                        Text="Test Config Settings" />


                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="20,0,0,10"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12"
                        Text="Test Name" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="Auto"
                        Margin="10,10,0,20"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12">
                        <Underline>
                            <Run Text="{x:Bind ViewModel.TestConfigProp.TestName, Mode=OneWay}" />
                        </Underline>
                    </TextBlock>


                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12"
                        Text="Lastname"
                        Visibility="{x:Bind ViewModel.TestConfigProp.LastName, Converter={StaticResource NullToVisibilityConverter}}" />
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Width="Auto"
                        Margin="10,5,0,5"
                        Padding="5"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12"
                        Text="{x:Bind ViewModel.TestConfigProp.LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{x:Bind ViewModel.TestConfigProp.LastName, Converter={StaticResource NullToVisibilityConverter}}" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12"
                        Text="Firstname"
                        Visibility="{x:Bind ViewModel.TestConfigProp.FirstName, Converter={StaticResource NullToVisibilityConverter}}" />
                    <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Width="Auto"
                        Margin="10,5,0,5"
                        Padding="5"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12"
                        Text="{x:Bind ViewModel.TestConfigProp.FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{x:Bind ViewModel.TestConfigProp.FirstName, Converter={StaticResource NullToVisibilityConverter}}" />

                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12"
                        Text="Middlename"
                        Visibility="{x:Bind ViewModel.TestConfigProp.MiddleName, Converter={StaticResource NullToVisibilityConverter}}" />
                    <TextBox
                        Grid.Row="4"
                        Grid.Column="1"
                        Width="Auto"
                        Margin="10,5,0,5"
                        Padding="5"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12"
                        Text="{x:Bind ViewModel.TestConfigProp.MiddleName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{x:Bind ViewModel.TestConfigProp.MiddleName, Converter={StaticResource NullToVisibilityConverter}}" />

                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12"
                        Text="Gender"
                        Visibility="{x:Bind ViewModel.TestConfigProp.Gender, Converter={StaticResource NullToVisibilityConverter}}" />
                    <TextBox
                        Grid.Row="5"
                        Grid.Column="1"
                        Width="Auto"
                        Margin="10,5,0,5"
                        Padding="5"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12"
                        Text="{x:Bind ViewModel.TestConfigProp.Gender, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{x:Bind ViewModel.TestConfigProp.Gender, Converter={StaticResource NullToVisibilityConverter}}" />

                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="0"
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12"
                        Text="Address"
                        Visibility="{x:Bind ViewModel.TestConfigProp.Address, Converter={StaticResource NullToVisibilityConverter}}" />
                    <TextBox
                        Grid.Row="6"
                        Grid.Column="1"
                        Width="340"
                        Margin="10,5,0,5"
                        Padding="5"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12"
                        Text="{x:Bind ViewModel.TestConfigProp.Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap"
                        Visibility="{x:Bind ViewModel.TestConfigProp.Address, Converter={StaticResource NullToVisibilityConverter}}" />

                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="0"
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12"
                        Text="Phone Number"
                        Visibility="{x:Bind ViewModel.TestConfigProp.PhoneNumber, Converter={StaticResource NullToVisibilityConverter}}" />
                    <TextBox
                        Grid.Row="7"
                        Grid.Column="1"
                        Width="Auto"
                        Margin="10,5,0,5"
                        Padding="5"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12"
                        Text="{x:Bind ViewModel.TestConfigProp.PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{x:Bind ViewModel.TestConfigProp.PhoneNumber, Converter={StaticResource NullToVisibilityConverter}}" />

                    <TextBlock
                        Grid.Row="8"
                        Grid.Column="0"
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12"
                        Text="Comments"
                        Visibility="{x:Bind ViewModel.TestConfigProp.Comments, Converter={StaticResource NullToVisibilityConverter}}" />
                    <TextBox
                        Grid.Row="8"
                        Grid.Column="1"
                        Width="Auto"
                        Margin="10,5,0,5"
                        Padding="5"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12"
                        Text="{x:Bind ViewModel.TestConfigProp.Comments, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        TextWrapping="Wrap"
                        Visibility="{x:Bind ViewModel.TestConfigProp.Comments, Converter={StaticResource NullToVisibilityConverter}}" />

                    <TextBlock
                        Grid.Row="9"
                        Grid.Column="0"
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12"
                        Text="Test repeats"
                        Visibility="{x:Bind ViewModel.TestConfigProp.RepeatNumber, Converter={StaticResource NullToVisibilityConverter}}" />
                    <TextBox
                        Grid.Row="9"
                        Grid.Column="1"
                        Width="Auto"
                        Margin="10,5,0,5"
                        Padding="5"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12"
                        Text="{x:Bind ViewModel.TestConfigProp.RepeatNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{x:Bind ViewModel.TestConfigProp.RepeatNumber, Converter={StaticResource NullToVisibilityConverter}}" />

                    <TextBlock
                        Grid.Row="10"
                        Grid.Column="0"
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12"
                        Text="Expected Result"
                        Visibility="{x:Bind ViewModel.TestConfigProp.ExpectedResult, Converter={StaticResource NullToVisibilityConverter}}" />
                    <TextBox
                        Grid.Row="10"
                        Grid.Column="1"
                        Width="Auto"
                        Margin="10,5,0,5"
                        Padding="5"
                        VerticalAlignment="Center"
                        FontFamily="DemiBold"
                        FontSize="12"
                        Text="{x:Bind ViewModel.TestConfigProp.ExpectedResult, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{x:Bind ViewModel.TestConfigProp.ExpectedResult, Converter={StaticResource NullToVisibilityConverter}}" />

                    <Grid
                        Grid.Row="11"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,20,0,0"
                        VerticalAlignment="Center">

                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="0,0,0,15"
                            Height="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="Bold"
                            FontSize="12"
                            Foreground="{x:Bind ViewModel.BuildProjectResultForeground, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Text="{x:Bind ViewModel.BuildProjectResult, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Button
                            Grid.Row="1"
                            Grid.Column="0"
                            Width="80"
                            Height="35"
                            Margin="0,0,15,10"
                            HorizontalAlignment="Right"
                            Command="{x:Bind ViewModel.CancelSavingCommand}"
                            Content="Cancel" />

                        <Button
                            Grid.Row="1"
                            Grid.Column="1"
                            Width="80"
                            Height="35"
                            Margin="15,0,0,10"
                            HorizontalAlignment="Left"
                            Command="{x:Bind ViewModel.SaveJsonSettingsCommand}"
                            Content="Save" />

                    </Grid>

                </Grid>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
